.header
  -if user_signed_in?
    = render 'shared/header_mypage'
  -else
    = render 'shared/header'
%section.item-info-container
  %h1.item-info-container__name
    = @item.name
  -if user_signed_in?
  -else
    %p.item-info-container__seller-info
      -# = "『#{@item.name}』は"times"回の取引実績を持つ#{@item.saler.name}さんから出品されました。
      -# 最下カテゴリ/最上位の商品で、Address.cityから#{@item.shipping_date}日で発送されます。"
  .item-main-content
    .item-main-content__flex-wrapper
      .item-main-content__photo
        = @item.images.first
      %table.item-detail-table
        %tbody
          %tr
            %th 出品者
            %td
              = @item.saler.name
          %tr
            %th カテゴリー
            %td
              = link_to "" do
                = @item.category.parent.parent.name
              %br
              = link_to "" do
                = @item.category.parent.name
              %br
              = link_to "" do
                = @item.category.name
          %tr
            %th ブランド
            %td 
          -if @item.size
            //商品サイズがあるときのみ表示させる
            %tr
              %th 商品のサイズ
              %td
                = @item.size
          %tr
            %th 商品の状態
            %td
              = @item.condition
          %tr
            %th 配送料の負担
            %td 
              = @item.postage.name
          %tr
            %th 配送の方法
            %td
              = @item.transact
          %tr
            %th 配送元地域
            %td
              = Address.find(@item.saler_id).city
          %tr
            %th 発送日の目安
            %td
              = @item.shipping_date
    .item-main-content__price
      %span.item-main-content__price__item-price
        = "￥#{@item.price.to_s(:delimited, delimiter: ',')}"
      %span.item-main-content__price__tax
        (税込)
      %span.item-main-content__price__shipping-fee
        = @item.postage.name.slice(0..3)
    .item-buy-btn
      = link_to new_payment_path(@item.id) do
        購入画面に進む
    .item-main-content__description
      %p.item-main-content__description__item-description
        = @item.introduct
.message-container
  .message-content
    %ul.messages
      %li.messages__message
        %a.messages__message__user{href: "/"}
        .messages__message__body
          .message__body__text
          .message__body__icons
            = icon 'far', 'clock'

= render 'shared/footer'
