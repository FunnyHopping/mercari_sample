%main.card-new-container
  .card-new-container__content
    %section.card-new-container__content__container
      %h2= "クレジットカード情報入力"
      = form_with model:@card, url: cards_path,local: true,id: "card_form",name: "card_form",class: "card-new-container__content__container__form" do |f|
        .card-new-container__content__container__form__content
          .card-new-container__content__container__form__content__group
            %label カード番号
            %span.span="必須"
            = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          .card-new-container__content__container__form__content__group.second
            %label 有効期限
            %span.span="必須"
            %br
            %select#exp_month{name: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月
            %select#exp_year{name: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
          .card-new-container__content__container__form__content__group.third
            %label セキュリティコード
            %span.span="必須"
            = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          .card-new-container__content__container__form__content__submit#card_token
            = submit_tag "追加する", id: "token_submit",class:"btn-default btn-red"