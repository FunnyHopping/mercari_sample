= render 'shared/header_mypage'
- breadcrumb :card
= render "shared/breadcrumbs"
%main.index-container
  = render 'shared/mypage_side'
  %main.card-edit-container
    .card-edit-container__content
      %section.card-edit-container__content__container
        %h2= "支払い方法"
        .card-edit-container__content__container__content
          %section.card-edit-container__content__container__content__section
            .card-edit-container__content__container__content__section__content
              %h3="クレジットカード一覧"
            %ul.card-edit-container__content__container__content__section__content__list
              %li.card-edit-container__content__container__content__section__content__list__li
                .card-edit-container__content__container__content__section__content__list__li__body
                  %figure
                    = image_tag("//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763",size: "34x20")
                  .card-edit-container__content__container__content__section__content__list__li__body__num
                    = "**** **** **** " + @default_card_information.last4
                  .card-edit-container__content__container__content__section__content__list__li__body__snum
                    - exp_month = @default_card_information.exp_month.to_s
                    - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
                  = link_to "削除する", card_path, method: :delete
            .card-edit-container__content__container__content__section__content__intro
              = link_to "支払い方法について", root_path