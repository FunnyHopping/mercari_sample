.payment-new-container
  %header.signup-header
    %h1
      = link_to root_path do
        = image_tag("logo.svg")
  %main.payment-new-container__main
    %section.payment-new-container__main__section
      %h2 購入内容の確認
      %section.payment-new-container__main__section__item
        .payment-new-container__main__section__item__content
          %h3.payment-new-container__main__section__item__content__image
            = image_tag(@item.images.first)
          %p.payment-new-container__main__section__item__content__text
            = @item.name
          .payment-new-container__main__section__item__content__body
            %p.payment-new-container__main__section__item__content__body__text
              = "¥#{@item.price}"
              %span="送料込み"
            %ul.payment-new-container__main__section__item__content__body__point
              %li.payment-new-container__main__section__item__content__body__point__li
                .payment-new-container__main__section__item__content__body__point__li__text
                  ="ポイントはありません"
            %ul.payment-new-container__main__section__item__content__body__money
              %li.payment-new-container__main__section__item__content__body__money__li
                .payment-new-container__main__section__item__content__body__money__li__text
                  = "支払い金額"
                .payment-new-container__main__section__item__content__body__money__li__body
                  %span= "¥#{@item.price}" 
            .payment-new-container__main__section__item__content__body__btn
              = link_to "購入する", payments_path(@item.id), method: :post
      %section.payment-new-container__main__section__address
        .payment-new-container__main__section__address__content
          %h3= "配送先"
          %address.payment-new-container__main__section__address__content__address
            = @address.post_num
            %br
            = "#{@address.prefecture_id}  #{@address.city}"
            %br
            = current_user.name
          %p.payment-new-container__main__section__address__content__info
          = link_to "変更する", root_path
      %section.payment-new-container__main__section__card
        .payment-new-container__main__section__card__content
          %h3= "支払い方法"
          %p.payment-new-container__main__section__card__content__info
            = "**** **** **** " + @default_card_information.last4
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          %figure
          = link_to "変更する", root_path