!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FreemarketSample58a
    %script{src: "https://js.pay.jp/", type: "text/javascript"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if user_signed_in?
      = "ログイン中"
      = link_to "ログアウト", logout_path, method: :delete
    -else
      = "ログアウト中"
      = link_to 'ログイン', login_path
      = link_to 'googleアカウントでログイン',  user_google_oauth2_omniauth_authorize_path
      = link_to 'facebookアカウントでログイン', user_facebook_omniauth_authorize_path
    = link_to '新規登録', step0_signups_path
    = link_to 'Google',  user_google_oauth2_omniauth_authorize_path
    = link_to 'FaceBook', user_facebook_omniauth_authorize_path
    = yield
