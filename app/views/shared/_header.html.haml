.header
  .header__contents
    .header__contents__top
      .header__contents__top__logo
        = link_to image_tag("logo.svg"), root_path, class: "mercari-logo"
      = form_with url: "",class: "header__contents__top__search", method: :get, local: true do |f| 
        = f.text_field :search, class: "search-form", placeholder: "何かお探しですか？"
        %label.label
          = f.submit class: "submit"
          %i.search-icon

    .header__contents__bottom
      .header__contents__bottom__left
        .header__contents__bottom__left__category
          = link_to categories_path, class: "search-link" do
            %i.category-icon
            カテゴリーから探す
            
        = render 'shared/category-dropdown'

        .header__contents__bottom__left__brand
          = link_to "", class: "search-link"  do
            %i.brand-icon
            ブランドから探す
          //ブランドー一覧のドロップダウンメニュー
          .brand-dropdown
            %ul
              %li
              
      .header__contents__bottom__right2
        .header__contents__bottom__right2__signup
          = link_to step0_signups_path, class: "signup-btn" do
            新規会員登録
        .header__contents__bottom__right2__login
          = link_to login_path,class: "login" do
            ログイン 
