.message-content
  %ul.messages
    %li.messages__message.clearfix
      %a.messages__message__user{href: "/"}
        %figure
          %div
            %img
          %figcaption.bold
            = comment.user.name
            -if comment.item.saler_id == comment.user.id
              %span (出品者)
      .messages__message__body
        .message__body__text
          =comment.text
        .message__body__icons
          = icon 'far', 'clock'
          %span
            =time_ago_in_words(comment.created_at)
            前