%header.signup-header
  %h1
    = link_to root_path do
      = image_tag("logo.svg")
.signup
  %section.signup__container
    %h2 新規会員登録
    .signup__container__form
      .signup__container__form__content
        .signup__container__form__content__email
          = link_to step1_signups_path do
            = icon("fas","envelope")
            = "メールアドレスで登録する"
        .signup__container__form__content__facebook
          = link_to user_facebook_omniauth_authorize_path do
            = icon("fab","facebook-square")
            = "Facebookで登録"
        .signup__container__form__content__google
          = link_to user_google_oauth2_omniauth_authorize_path do
            = icon("fab","google")
            = "Googleで登録する"